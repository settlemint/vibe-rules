{
  "name": "@settlemint/vibe-rules",
  "version": "1.0.0",
  "description": "CLI tool to install shared vibe rules into your project",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "settlemint-vibe-rules": "./dist/settlemint-vibe-rules"
  },
  "files": [
    "dist/",
    ".claude/",
    ".cursor/",
    "CLAUDE.md"
  ],
  "scripts": {
    "generate": "bun generate-embedded-files.ts",
    "build": "bun run generate && bun run build.ts",
    "prepublishOnly": "bun run build",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "typecheck": "bun run generate && tsc --noEmit",
    "ci": "bun run lint && bun run typecheck && bun run build"
  },
  "keywords": [
    "cli",
    "vibe",
    "rules",
    "settlemint",
    "developer-tools"
  ],
  "license": "FSL-1.1-MIT",
  "author": {
    "name": "SettleMint",
    "email": "support@settlemint.com",
    "url": "https://settlemint.com"
  },
  "homepage": "https://github.com/settlemint/vibe-rules/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/settlemint/vibe-rules.git"
  },
  "bugs": {
    "url": "https://github.com/settlemint/vibe-rules/issues",
    "email": "support@settlemint.com"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@types/bun": "latest",
    "@types/react": "^19.1.8",
    "@types/update-notifier": "^6.0.8",
    "ultracite": "^5.0.10"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "ink": "^6.0.0",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-spinner": "^5.0.0",
    "react": "^19.1.0",
    "react-devtools-core": "^6.1.2",
    "update-notifier": "^7.3.1"
  }
}
